<div class="indexBody">
  <div class="words">
    <form action="/word/search" method="post">
      <div class="search">
        <input type="text" name="word" required>
        <button>Search</button>
      </div>
    </form>
    <div class="list">
      <ul>
        {{#each wordList}}
        <li class="item">
          <div class="remember">
            {{{this.remember}}}
            <a class="word" href="/word/{{this.id}}">{{this.word}}</a>
          </div>
          <div class="action">
            <div>
              <a href="/word/editWord/{{this.id}}">Edit</a>
            </div>
            <div>
              <form action="/word/delete/{{this.id}}?_method=DELETE" method="post">
                <button type="submit">Delete</button>
              </form>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="functionList">
    <div class="container">
      <ul>
        <li><a href="/word/newWord">新增單字</a></li>
        <li><a href="/test/setting">進行測驗</a></li>
      </ul>
    </div>
  </div>
</div>